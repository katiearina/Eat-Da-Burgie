<!-- Begin Page Container -->
<div class="container" id="wrap">

    <!-- Burgie Header -->
    <img src="./assets/img/burgie.png">

    <!-- Begin First Row -->
    <div class="row">

        <div class="col-12">

            <h1>Welcome to Burgie's AdoraBurger!</h1>

            <h2>May is Pok√©mon Burger Month!</h2>

        </div>

    <!-- End First Row -->
    </div>

    <!-- Begin Second Row -->
    <div class="row">

        <div class="col-12">

            <h5>The Ditto: Create your own burger!</h5>
                <form class="create-update-form" action="/" method="POST">
                    <div class="form-group">
                        <label for="newBurger"></label>
                        <input type="text" id="newBurger" name="burger_name">
                    </div>             
                    <button type="submit" class="btn btn-primary btn-sm">Order It!</button>
                </form>
                
        </div>

    <!-- End Second Row -->
    </div>

    <!-- Begin Third Row -->
    <div class="row">

        <div class="col-6">
            <h5>Try One of These!</h5>
                {{#each burgers}}
                    {{#unless this.devoured}}
                    <p>
                        {{this.burger_name}}
                    </p>
                    {{/unless}}
                {{/each}}
        </div>

        <div class="col-6">
            <h5>Consumed, But Not Forgotten</h5>
                {{#each burgers}}
                    {{#if this.devoured}}
                    <p>
                        {{this.burger_name}}
                    </p>
                    {{/if}}
                {{/each}}
        </div>

    <!-- End Third Row -->
    </div>

<!-- End Page Container -->
</div>